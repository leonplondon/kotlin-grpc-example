root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true

[*.kt]
insert_final_newline = true
max_line_length = 100
tab_width = 8

[*.md]
trim_trailing_whitespace = false

[*.proto]
indent_size = 2
tab_width = 2

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.har,*.json}]
indent_size = 2

[{*.yaml,*.yml}]
indent_size = 2
